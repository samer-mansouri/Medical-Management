<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sérénithérapie</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;700&display=swap" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-dI7MEpM3hs+Pmc6kG0kOa/BXq0Jm5e6ayB8/2L3N1kHso6M5N70H4fR1Fzj+GhWhN7yzfJ9c5J+1DLw9cV95+g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <style>
       body {
      font-family: 'Rubik', sans-serif;
      background-color: #f7f9fc;
      overflow-x: hidden !important;
      transition: background-color 0.3s, color 0.3s;
    }
    .dark-mode {
  background-color: #121212;
  color: #ffffff;
}

.dark-mode .bg-white {
  background-color: #1f1f1f;
}

.dark-mode .text-gray-600 {
  color: #bdbdbd;
}

.dark-mode .bg-gray-900 {
  background-color: #1f1f1f;
}

.dark-mode .bg-green-500 {
  background-color: #4caf50;
}

.dark-mode .bg-blue-500 {
  background-color: #2196f3;
}

.dark-mode .hover\:bg-green-600:hover {
  background-color: #388e3c;
}

.dark-mode .hover\:bg-blue-600:hover {
  background-color: #1976d2;
}

.dark-mode .text-white {
  color: #ffffff;
}

.swiper-container {
  width: 100%;
  padding-bottom: 50px;
}

.swiper-slide {
  background-size: cover;
  background-position: center;
  width: 600px;
  height: 100vh;
  position: relative;
}

.swiper-button-next,
.swiper-button-prev {
  color: #fff;
}

.swiper-pagination-bullet {
  background-color: #fff;
  opacity: 1;
}

.swiper-pagination-bullet-active {
  background-color: #000;
}

.welcome-text {
  position: absolute;
  bottom: 20px;
  left: 20px;
  color: white;
  font-size: 24px;
  font-weight: bold;
  text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
}
  </style>
</head>
<body class="bg-gray-100 text-gray-800">
  <header>
    <nav class="bg-gray-900 text-white p-4 flex justify-between items-center">
      <div>
        <a href="/home" class="text-xl font-bold">Sérénithérapie</a>
      </div>
      <div class="hidden md:flex space-x-4 items-center">
        <form class="flex items-center space-x-2">
          <input class="px-4 py-2 rounded border-none focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Search" aria-label="Search">
          <button class="px-4 py-2 bg-blue-500 rounded text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" type="submit">Search</button>
        </form>
        <a href="/home" class="text-white hover:text-blue-400">Home</a>
        <a href="/logout" class="text-white hover:text-blue-400">Logout</a>
        <button id="dark-mode-toggle" class="ml-4 px-4 py-2 bg-gray-800 text-white rounded hover:bg-gray-700 focus:outline-none">
          <i id="dark-mode-icon" class="fas fa-moon"></i>
        </button>
      </div>
      <div class="md:hidden">
        <button onclick="showSidebar()">
          <svg xmlns="http://www.w3.org/2000/svg" height="26" viewBox="0 96 960 960" width="26" class="text-white">
            <path d="M120 816v-60h720v60H120Zm0-210v-60h720v60H120Zm0-210v-60h720v60H120Z" />
          </svg>
        </button>
      </div>
    </nav>
  </header>

  <div class="swiper-container">
    <div class="swiper-wrapper">
      <div class="swiper-slide" style="background-image:url('https://cdn1.epicgames.com/ue/product/Screenshot/HighresScreenshot00025-1920x1080-07fc8426a3f90193ed08d9a7b3125cfe.jpg?resize=1&w=1920')"></div>
      <div class="swiper-slide" style="background-image:url('https://i0.wp.com/lapresse.tn/wp-content/uploads/2019/05/eclr-medecin.jpg?fit=1600%2C900&ssl=1')"></div>
      <div class="swiper-slide" style="background-image:url('https://healthcaresalute-soinsdesantesalute.com/wp-content/uploads/team-of-medical-workers-wearing-personal-protectiv-2021-09-03-13-37-20-utc-flipped-crop-scaled.jpg')"></div>
    </div>
    <div class="swiper-pagination"></div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>

  <div class="max-w-6xl mx-auto py-2">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {{#each details}}
        <div class="swiper-slide">
          <div class="job p-6 rounded-lg shadow-lg bg-white mx-4">
            <div class="image-container">
              <img src="https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png?20150327203541" alt="{{nom}} {{prenom}}"
                class="rounded-full w-24 h-24 mx-auto">
              
            </div>
            <div class="text-center mt-4">
              <h3 class="text-xl font-bold">{{nom}} {{prenom}}</h3>
              <p class="text-gray-600">{{specialite}}</p>
              <a href="/detailsdesc/{{idD}}" class=" bg-blue-500 text-white rounded hover:bg-blue-600 transition duration-300 ease-in-out px-6 py-3 ">More Details</a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="swiper-pagination mt-4"></div>
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>

  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script>
    function showSidebar() {
      const sidebar = document.querySelector('.sidebar');
      sidebar.style.display = 'flex';
    }

    function hideSidebar() {
      const sidebar = document.querySelector('.sidebar');
      sidebar.style.display = 'none';
    }

    const swiper = new Swiper('.swiper-container', {
      slidesPerView: 1,
      spaceBetween: 20,
      loop: true,
      centeredSlides: true,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    });

    document.addEventListener('DOMContentLoaded', (event) => {
      const toggleButton = document.getElementById('dark-mode-toggle');
      const icon = document.getElementById('dark-mode-icon');
      const currentTheme = localStorage.getItem('theme');

      if (currentTheme) {
        document.body.classList.add(currentTheme);
        icon.className = currentTheme === 'dark-mode' ? 'fas fa-sun' : 'fas fa-moon';
      }

      toggleButton.addEventListener('click', () => {
        document.body.classList.toggle('dark-mode');
        let theme = 'light';
        if (document.body.classList.contains('dark-mode')) {
          theme = 'dark-mode';
          icon.className = 'fas fa-sun';
        } else {
          icon.className = 'fas fa-moon';
        }
        localStorage.setItem('theme', theme);
      });
    });
  </script>
</body>


</html>
