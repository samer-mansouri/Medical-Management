<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sérénithérapie</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500&display=swap" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Rubik', sans-serif;
      background-color: #f0f4f8;
    }

    .navbar {
      background-color: #fff;
      color: #333;
      border-bottom: 1px solid #e5e7eb;
    }

    .navbar a {
      color: #333;
    }

    .navbar .btn {
      background-color: #4299e1;
    }

    .content {
      background-color: #fff;
    }

    .content h3,
    .content h4 {
      color: #4a5568;
    }

    .content h4 {
      font-weight: 300;
    }
  </style>
</head>

<body class="bg-gray-100 text-gray-800">
  <header>
    <nav class="navbar p-4 shadow-sm flex justify-between items-center">
      <div class="flex items-center space-x-4">
        <a href="/home" class="text-xl font-medium">Sérénithérapie</a>
        <div class="hidden md:flex items-center space-x-2">
          <form class="flex items-center space-x-2">
            <input class="px-4 py-2 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Search" aria-label="Search">
            <button class="px-4 py-2 bg-blue-500 rounded-full text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" type="submit">Search</button>
          </form>
          <a href="/home" class="hover:text-blue-500">Home</a>
          <a href="/logout" class="hover:text-blue-500">Logout</a>
        </div>
      </div>
      <button class="md:hidden" onclick="showSidebar()">
        <svg xmlns="http://www.w3.org/2000/svg" height="26" viewBox="0 96 960 960" width="26" class="text-gray-800">
          <path d="M120 816v-60h720v60H120Zm0-210v-60h720v60H120Zm0-210v-60h720v60H120Z" />
        </svg>
      </button>
    </nav>
  </header>

  <div class="max-w-4xl mx-auto my-8 p-6 bg-white rounded-xl shadow-md">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-lg font-medium">Nom :</h3>
        <h4 class="text-base">{{details.nom}} {{details.prenom}}</h4>
      </div>
      <div>
        <h3 class="text-lg font-medium">Spécialité:</h3>
        <h4 class="text-base">{{details.specialite}}</h4>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
      <div>
        <h3 class="text-lg font-medium">Disponibilité:</h3>
        <h4 class="text-base">{{details.date_exp}}</h4>
      </div>
      <div>
        <h3 class="text-lg font-medium">Téléphone:</h3>
        <h4 class="text-base">{{details.tel}}</h4>
      </div>
    </div>
    <div class="mt-8">
      <h3 class="text-lg font-medium">Description de l'emploi:</h3>
      <h4 class="text-base">{{details.jobDescription}}</h4>
      <h3 class="text-lg font-medium mt-4">Prix :</h3>
      <h4 class="text-base">{{details.prix}}</h4>
    </div>
    <div class="flex justify-between mt-8">
      <a href="/rendez" class="px-6 py-3 bg-green-500 text-white rounded-full shadow-sm hover:bg-green-600 transition duration-300 ease-in-out transform hover:-translate-y-1">Réserve</a>
      <a href="/meet" class="px-6 py-3 bg-blue-500 text-white rounded-full shadow-sm hover:bg-blue-600 transition duration-300 ease-in-out transform hover:-translate-y-1">Rendez-vous</a>
    </div>
  </div>

  <script>
    function showSidebar() {
      const sidebar = document.querySelector('.sidebar');
      sidebar.style.display = 'flex';
    }

    function hideSidebar() {
      const sidebar = document.querySelector('.sidebar');
      sidebar.style.display = 'none';
    }
  </script>
</body>

</html>
